root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[{py/*,*.py}]
indent_style = space
indent_size = 4

[{*.zsh,sbatch/*}]
indent_style = tab
indent_size = 4

[{yaml/*,*.yaml,*.yml}]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false
